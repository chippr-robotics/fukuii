<configuration>

    <property name="stdoutEncoderPattern" value="%d{HH:mm:ss} [%logger{36}] - %msg%n" />
    <property name="fileEncoderPattern" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} %X{akkaSource} - %msg%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${stdoutEncoderPattern}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${java.io.tmpdir}/fukuii-it-test/fukuii.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${java.io.tmpdir}/fukuii-it-test/fukuii.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>${fileEncoderPattern}</pattern>
        </encoder>
    </appender>

    <!-- Reduce log noise from sync components in integration tests -->
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.SyncStateScheduler" level="WARN" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.SyncStateSchedulerActor" level="WARN" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.Blacklist" level="WARN" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeersClient" level="WARN" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeerListSupportNg" level="WARN" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.BlockFetcher" level="WARN" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.FetchRequest" level="WARN" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.FastSync" level="WARN" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
