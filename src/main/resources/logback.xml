<configuration>

    <property name="stdoutEncoderPattern" value="%d %-5level [%logger{36}] - %msg%n" />
    <property name="fileEncoderPattern" value="%d [%thread] %-5level %logger{36} %X{akkaSource} - %msg%n" />

    <!--read properties from application.conf using PropertyDefiner (logback 1.5.x compatible)-->
    <define name="LOGSLEVEL" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.logs-level</key>
        <defaultValue>ERROR</defaultValue>
    </define>
    <define name="ASJSON" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.json-output</key>
        <defaultValue>false</defaultValue>
    </define>
    <define name="LOGSDIR" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.logs-dir</key>
        <defaultValue>./logs</defaultValue>
    </define>
    <define name="LOGSFILENAME" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.logs-file</key>
        <defaultValue>fukuii</defaultValue>
    </define>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGSDIR}/${LOGSFILENAME}.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${LOGSDIR}/${LOGSFILENAME}.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>50</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>${fileEncoderPattern}</pattern>
        </encoder>
    </appender>

    <appender name="METRICS" class="io.prometheus.client.logback.InstrumentedAppender" />

    <!-- Console appender - uses JSON output if ASJSON property is true, otherwise plain text -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <if condition='p("ASJSON").contains("true")'>
            <then>
                <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                    <customFields>{"service":"fukuii","node":"${FUKUII_NODE_ID:-${HOSTNAME}}","environment":"${FUKUII_ENV:-production}"}</customFields>
                    <fieldNames>
                        <timestamp>timestamp</timestamp>
                        <version>[ignore]</version>
                        <logger>logger</logger>
                        <thread>thread</thread>
                        <level>level</level>
                        <levelValue>level_value</levelValue>
                        <message>message</message>
                        <stackTrace>stack_trace</stackTrace>
                    </fieldNames>
                    <includeMdcKeyNames>
                        <includeMdcKeyName>peer</includeMdcKeyName>
                        <includeMdcKeyName>block</includeMdcKeyName>
                        <includeMdcKeyName>transaction</includeMdcKeyName>
                        <includeMdcKeyName>actor</includeMdcKeyName>
                    </includeMdcKeyNames>
                    <includeCallerData>false</includeCallerData>
                    <includeContext>true</includeContext>
                </encoder>
            </then>
            <else>
                <encoder>
                    <pattern>${stdoutEncoderPattern}</pattern>
                </encoder>
            </else>
        </if>
    </appender>

    <root level="${LOGSLEVEL}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="METRICS" />
    </root>

    <!-- =================================================================== -->
    <!-- LOGGING LEVEL CONFIGURATION                                         -->
    <!-- =================================================================== -->
    <!-- 
         This section provides logger entries for all major fukuii components.
         Each logger can be manually set to DEBUG for troubleshooting.
         
         DEFAULT POLICY (minimal base):
         - Root level is ERROR (only actionable failures)
         - High-level lifecycle events (DAG generation, sync status) use INFO
         - Low-level operations (peer connections, protocol details) use ERROR
         
         Log Level Guidelines (see ADR OPS-002):
         - ERROR: Failures requiring immediate attention
         - WARN:  Unexpected but recoverable situations  
         - INFO:  Significant state changes and milestones (sparse in production)
         - DEBUG: Detailed operational information for troubleshooting
         - OFF:   Disable logging entirely (for performance-sensitive components)
         
         NB: When setting any level to DEBUG, you may also need to adjust
         pekko.loglevel in application.conf for actor-based components.
    -->
    
    <!-- =================================================================== -->
    <!-- EXTERNAL LIBRARIES                                                  -->
    <!-- =================================================================== -->
    <!-- Reduce noise from third-party libraries -->
    <logger name="io.netty" level="WARN"/>
    <logger name="org.jupnp.QueueingThreadPoolExecutor" level="WARN" />
    <logger name="org.jupnp.util.SpecificationViolationReporter" level="ERROR" />
    <logger name="org.jupnp.protocol.RetrieveRemoteDescriptors" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- HIGH-LEVEL LIFECYCLE EVENTS (INFO level for actionable status)     -->
    <!-- =================================================================== -->
    <!-- Application lifecycle -->
    <logger name="com.chipprbots.ethereum.App" level="INFO" />
    <logger name="com.chipprbots.ethereum.Fukuii" level="INFO" />
    
    <!-- DAG generation progress (important for mining) -->
    <logger name="com.chipprbots.ethereum.consensus.pow.miners.EthashDAGManager" level="INFO" />
    
    <!-- Peer discovery lifecycle (start/stop events only) -->
    <logger name="com.chipprbots.ethereum.network.discovery.PeerDiscoveryManager" level="INFO" />
    
    <!-- Sync status and lifecycle (high-level status only) -->
    <logger name="com.chipprbots.ethereum.blockchain.sync.SyncController" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.FastSync" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.RegularSync" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.SNAPSyncController" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.AdaptiveSyncStrategy" level="INFO" />
    
    <!-- Genesis and checkpoint loading -->
    <logger name="com.chipprbots.ethereum.blockchain.data.GenesisDataLoader" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.data.BootstrapCheckpointLoader" level="INFO" />
    
    <!-- =================================================================== -->
    <!-- LOW-LEVEL NETWORKING (ERROR only - peer connections)                -->
    <!-- =================================================================== -->
    <!-- Scalanet - low-level networking library -->
    <logger name="com.chipprbots.scalanet" level="ERROR" />
    <logger name="com.chipprbots.scalanet.peergroup.udp.StaticUDPPeerGroup" level="ERROR" />
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v4.DiscoveryService" level="ERROR" />
    
    <!-- Discovery v5 - detailed peer discovery logs -->
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v5" level="ERROR" />
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v5.DiscoveryService" level="ERROR" />
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v5.DiscoveryNetwork" level="ERROR" />
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v5.DiscoveryRPC" level="ERROR" />
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v5.Session" level="ERROR" />
    
    <!-- Network - peer connections and communication -->
    <logger name="com.chipprbots.ethereum.network" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.PeerActor" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.PeerManagerActor" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.NetworkPeerManagerActor" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.ServerActor" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.KnownNodesManager" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.PeerScoringManager" level="ERROR" />
    
    <!-- Network discovery - detailed discovery operations -->
    <logger name="com.chipprbots.ethereum.network.discovery" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.discovery.Node" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.discovery.StaticNodesLoader" level="ERROR" />
    
    <!-- Network handshaking - protocol handshake details -->
    <logger name="com.chipprbots.ethereum.network.handshaker" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.handshaker.EtcHelloExchangeState" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.handshaker.EthNodeStatus64ExchangeState" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.handshaker.EthNodeStatus63ExchangeState" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.handshaker.EtcForkBlockExchangeState" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.handshaker.EtcNodeStatusExchangeState" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- RLPX - Encrypted transport protocol (ERROR only)                    -->
    <!-- =================================================================== -->
    <logger name="com.chipprbots.ethereum.network.rlpx" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.rlpx.RLPxConnectionHandler" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.rlpx.FrameCodec" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.rlpx.MessageCodec" level="ERROR" />
    <logger name="com.chipprbots.ethereum.network.rlpx.AuthHandshaker" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- SYNC INTERNALS (ERROR only - detailed sync operations)             -->
    <!-- =================================================================== -->
    <!-- Peer list management and blacklist -->
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeerRequestHandler" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeersClient" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeerListSupportNg" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.Blacklist" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.BlockchainHostActor" level="ERROR" />
    
    <!-- Fast sync internals -->
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.PivotBlockSelector" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.SyncStateScheduler" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.SyncStateSchedulerActor" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.FastSyncBranchResolverActor" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.StateStorageActor" level="ERROR" />
    
    <!-- Regular sync internals -->
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.BlockFetcher" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.BlockImporter" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.HeadersFetcher" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.BodiesFetcher" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.FetchRequest" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.StateNodeFetcher" level="ERROR" />
    
    <!-- SNAP sync internals -->
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.AccountRangeDownloader" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.StorageRangeDownloader" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.TrieNodeHealer" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.ByteCodeDownloader" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.MerkleProofVerifier" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.SNAPErrorHandler" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.SNAPRequestTracker" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- OTHER COMPONENTS (inherit ERROR from root)                          -->
    <!-- =================================================================== -->
    <!-- Set to DEBUG for specific troubleshooting -->
    <logger name="com.chipprbots.ethereum.ledger" level="ERROR" />
    <logger name="com.chipprbots.ethereum.ledger.BlockExecution" level="ERROR" />
    <logger name="com.chipprbots.ethereum.ledger.BlockPreparator" level="ERROR" />
    <logger name="com.chipprbots.ethereum.ledger.BlockQueue" level="ERROR" />
    <logger name="com.chipprbots.ethereum.ledger.BranchResolution" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- DATABASE - Storage and persistence                                  -->
    <!-- =================================================================== -->
    <!-- Set to DEBUG for database operation troubleshooting -->
    <logger name="com.chipprbots.ethereum.db" level="ERROR" />
    <logger name="com.chipprbots.ethereum.db.dataSource.RocksDbDataSource" level="ERROR" />
    <logger name="com.chipprbots.ethereum.db.storage.ReferenceCountNodeStorage" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- MPT - Merkle Patricia Trie                                          -->
    <!-- =================================================================== -->
    <!-- Set to DEBUG for trie operation troubleshooting -->
    <logger name="com.chipprbots.ethereum.mpt" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- VM - Ethereum Virtual Machine                                       -->
    <!-- =================================================================== -->
    <!-- VM execution is OFF by default for performance -->
    <!-- Set to DEBUG for EVM execution traces (very verbose!) -->
    <logger name="com.chipprbots.ethereum.vm" level="OFF" />
    <logger name="com.chipprbots.ethereum.vm.VM" level="OFF" />
    
    <!-- External VM interface - set to DEBUG for extvm troubleshooting -->
    <logger name="com.chipprbots.ethereum.extvm" level="ERROR" />
    <logger name="com.chipprbots.ethereum.extvm.VMClient" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- CONSENSUS - Mining and block validation                             -->
    <!-- =================================================================== -->
    <!-- Set to DEBUG for mining troubleshooting -->
    <logger name="com.chipprbots.ethereum.consensus" level="ERROR" />
    <logger name="com.chipprbots.ethereum.consensus.pow.PoWMiningCoordinator" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- TRANSACTIONS - Pending transactions and mempool                     -->
    <!-- =================================================================== -->
    <!-- Set to DEBUG for transaction pool troubleshooting -->
    <logger name="com.chipprbots.ethereum.transactions" level="ERROR" />
    <logger name="com.chipprbots.ethereum.transactions.PendingTransactionsManager" level="ERROR" />
    <logger name="com.chipprbots.ethereum.transactions.TransactionHistoryService" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- JSON-RPC - API server                                               -->
    <!-- =================================================================== -->
