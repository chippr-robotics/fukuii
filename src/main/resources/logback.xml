    <logger name="com.chipprbots.ethereum.jsonrpc" level="ERROR" />
    <logger name="com.chipprbots.ethereum.jsonrpc.JsonRpcController" level="ERROR" />
    <logger name="com.chipprbots.ethereum.jsonrpc.server.http" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- FAUCET - Test network faucet                                        -->
    <!-- =================================================================== -->
    <!-- Set to DEBUG for faucet troubleshooting -->
    <logger name="com.chipprbots.ethereum.faucet" level="ERROR" />
    <logger name="com.chipprbots.ethereum.faucet.FaucetHandler" level="ERROR" />
    
    <!-- =================================================================== -->
    <!-- METRICS - Performance monitoring                                    -->
    <!-- =================================================================== -->
    <!-- Set to DEBUG for metrics collection troubleshooting -->
    <logger name="com.chipprbots.ethereum.metrics" level="ERROR" />
</configuration>
