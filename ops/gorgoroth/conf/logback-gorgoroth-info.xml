<configuration>

    <property name="stdoutEncoderPattern" value="%d %-5level [%logger{36}] - %msg%n" />
    <property name="fileEncoderPattern" value="%d [%thread] %-5level %logger{36} %X{akkaSource} - %msg%n" />

    <!--read properties from application.conf using PropertyDefiner (logback 1.5.x compatible)-->
    <define name="LOGSLEVEL" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.logs-level</key>
        <defaultValue>INFO</defaultValue>
    </define>
    <define name="ASJSON" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.json-output</key>
        <defaultValue>false</defaultValue>
    </define>
    <define name="LOGSDIR" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.logs-dir</key>
        <defaultValue>./logs</defaultValue>
    </define>
    <define name="LOGSFILENAME" class="com.chipprbots.ethereum.utils.ConfigPropertyDefiner">
        <key>logging.logs-file</key>
        <defaultValue>fukuii-gorgoroth</defaultValue>
    </define>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${stdoutEncoderPattern}</pattern>
        </encoder>
    </appender>

    <appender name="STASH" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"fukuii","node":"${FUKUII_NODE_ID:-${HOSTNAME}}","environment":"${FUKUII_ENV:-production}"}</customFields>
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>level_value</levelValue>
                <message>message</message>
                <stackTrace>stack_trace</stackTrace>
            </fieldNames>
            <includeMdcKeyNames>
                <includeMdcKeyName>peer</includeMdcKeyName>
                <includeMdcKeyName>block</includeMdcKeyName>
                <includeMdcKeyName>transaction</includeMdcKeyName>
                <includeMdcKeyName>actor</includeMdcKeyName>
            </includeMdcKeyNames>
            <includeCallerData>false</includeCallerData>
            <includeContext>true</includeContext>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGSDIR}/${LOGSFILENAME}.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${LOGSDIR}/${LOGSFILENAME}.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>50</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>${fileEncoderPattern}</pattern>
        </encoder>
    </appender>

    <appender name="METRICS" class="io.prometheus.client.logback.InstrumentedAppender" />

    <if condition='p("ASJSON").contains("true")'>
        <then>
            <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
                <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                    <customFields>{"service":"fukuii","node":"${FUKUII_NODE_ID:-${HOSTNAME}}","environment":"${FUKUII_ENV:-production}"}</customFields>
                    <fieldNames>
                        <timestamp>timestamp</timestamp>
                        <version>[ignore]</version>
                        <logger>logger</logger>
                        <thread>thread</thread>
                        <level>level</level>
                        <levelValue>level_value</levelValue>
                        <message>message</message>
                        <stackTrace>stack_trace</stackTrace>
                    </fieldNames>
                    <includeMdcKeyNames>
                        <includeMdcKeyName>peer</includeMdcKeyName>
                        <includeMdcKeyName>block</includeMdcKeyName>
                        <includeMdcKeyName>transaction</includeMdcKeyName>
                        <includeMdcKeyName>actor</includeMdcKeyName>
                    </includeMdcKeyNames>
                    <includeCallerData>false</includeCallerData>
                    <includeContext>true</includeContext>
                </encoder>
            </appender>
        </then>
        <else>
            <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>${stdoutEncoderPattern}</pattern>
                </encoder>
            </appender>
        </else>
    </if>

    <root level="${LOGSLEVEL}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="METRICS" />
    </root>

    <!-- Highlight network components so enode announcements stay visible -->
    <logger name="com.chipprbots.ethereum.network" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.PeerActor" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.PeerManagerActor" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.NetworkPeerManagerActor" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.ServerActor" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.KnownNodesManager" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.discovery" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.discovery.Node" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.discovery.StaticNodesLoader" level="INFO" />

    <!-- keep default INFO signalers -->
    <logger name="com.chipprbots.ethereum.App" level="INFO" />
    <logger name="com.chipprbots.ethereum.Fukuii" level="INFO" />
    <logger name="com.chipprbots.ethereum.consensus.pow.miners.EthashDAGManager" level="INFO" />
    <logger name="com.chipprbots.ethereum.network.discovery.PeerDiscoveryManager" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.SyncController" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast.FastSync" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular.RegularSync" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap.SNAPSyncController" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.AdaptiveSyncStrategy" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.data.GenesisDataLoader" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.data.BootstrapCheckpointLoader" level="INFO" />

    <!-- keep the rest quiet -->
    <logger name="io.netty" level="WARN" />
    <logger name="org.jupnp" level="WARN" />
    <logger name="com.chipprbots.scalanet" level="ERROR" />
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v4.DiscoveryService" level="ERROR" />
    <logger name="com.chipprbots.scalanet.discovery.ethereum.v5" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeerRequestHandler" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeersClient" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.PeerListSupportNg" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.Blacklist" level="INFO" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.BlockchainHostActor" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.fast" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.regular" level="ERROR" />
    <logger name="com.chipprbots.ethereum.blockchain.sync.snap" level="ERROR" />
    <logger name="com.chipprbots.ethereum.ledger" level="ERROR" />
    <logger name="com.chipprbots.ethereum.db" level="ERROR" />
    <logger name="com.chipprbots.ethereum.mpt" level="ERROR" />
    <logger name="com.chipprbots.ethereum.vm" level="OFF" />
    <logger name="com.chipprbots.ethereum.extvm" level="ERROR" />
    <logger name="com.chipprbots.ethereum.consensus" level="ERROR" />
    <logger name="com.chipprbots.ethereum.transactions" level="ERROR" />
    <logger name="com.chipprbots.ethereum.jsonrpc" level="ERROR" />
    <logger name="com.chipprbots.ethereum.faucet" level="ERROR" />
    <logger name="com.chipprbots.ethereum.metrics" level="ERROR" />
</configuration>
